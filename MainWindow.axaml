<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="InventoryApp.MainWindow"
        Title="Inventory App" Width="400" Height="400">

    <StackPanel Margin="20">
        <TextBlock Text="ðŸ“¦ Inventory System" FontWeight="Bold" FontSize="20"/>
        <Button Content="Process Next Order"
                Command="{Binding ProcessNextOrderCommand}"
                Margin="0,10,0,10"/>
        <TextBlock Text="{Binding TotalRevenue, StringFormat='Total revenue: {0:N2} kr.'}" FontWeight="Bold"/>

        <TextBlock Text="Queued Orders:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ItemsControl ItemsSource="{Binding QueuedOrders}"/>

        <TextBlock Text="Processed Orders:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ItemsControl ItemsSource="{Binding ProcessedOrders}"/>
    </StackPanel>
</Window>

